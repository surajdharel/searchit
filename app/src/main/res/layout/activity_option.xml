<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dream.searchit.OptionActivity">

    <android.support.v7.widget.CardView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@color/grey"
        card_view:cardBackgroundColor="@color/grey"
        card_view:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="SEARCHit"
            android:textColor="@color/orange"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_1"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            android:fontFamily="serif-monospace"
            android:text="Please select the category" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_view1"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:onClick="personview1"
                    android:background="?selectableItemBackground"
                    android:layout_height="100dp"
                    android:layout_marginTop="160dp"
                    android:src="@drawable/personcontact1" />





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/img_view2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="160dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:onClick="orgview1"
                    android:src="@drawable/organization1" />



                </LinearLayout>


            </LinearLayout>









    </android.support.v7.widget.CardView>


</RelativeLayout>
